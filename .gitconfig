[color]
      ui = true
[color "status"]
      untracked = cyan
      changed = "#ffa500"
      added = "#7fff00"
[color "diff"]
      new = "#ffffff #008800"
      old = "#ffffff #aa0000"
[color "branch"]
      remote = "#ff3300"
[color "decorate"]
      remotebranch = "#ffa07a"
      local = "#0000ff bold"
      branch = "#98fb98 bold"
